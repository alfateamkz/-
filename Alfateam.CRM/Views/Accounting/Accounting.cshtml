<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Бухгалтерия за @Model.From.ToString("dd MMMM yyyy") - @Model.To.ToString("dd MMMM yyyy")
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">

            <div id="demo"></div>



            <table class="table table-hover" hidden id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th>Дата </th>
                        <th>Название</th>
                        <th>Доход</th>
                        <th>Расход</th>
                        <th>Описание</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.Items)
                   {
                        <tr>
                            <td>@item.Date.ToString("dd.MM.yyyy")</td>
                            <td>@item.Title</td>
                            <td>
                                @if(item.Direction == AccountingItemDirection.Income) {
                                    @item.Sum
                                }
                            </td>
                            <td>
                                @if (item.Direction == AccountingItemDirection.Expense) {
                                    @item.Sum
                                }
                            </td>
                            <td>@item.Description</td>
                            <td></td>
                            <td>
                                <div class="interect">
                  
                                </div>
                            </td>
                        </tr>
                   }
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>Итого</td>
                        <td>
                            @Math.Round(Model.IncomesSum,2)
                        </td>
                        <td>
                            @Math.Round(Model.ExpensesSum,2)
                        </td>
                        <td></td>
                        <td>Прибыль:</td>
                        <td>@Math.Round(Model.Profit,2)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>Оборот:</td>
                        <td>@Math.Round(Model.Turnover,2)</td>
                    </tr>
                </tbody>
            </table>

            <div class="mb-3 position-right">
                <a asp-action="CreateOrder" asp-controller="Orders" class="button-classic">Добавить</a>
            </div>

        @*    <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>*@

            <script>


                fetch(document.location.origin + `/GetAccountingByMonthJSON?year=2023&month=3`)
                    .then((response) => {
                        return response.json();
                    })
                    .then((data) => {
                        console.log(data);

                        let rows = [];

                        for(let i=0;i<data.items.length;i++){

                            let item = data.items[i];

                            let date = new Date(item.date);

                            let row = [
                                item.id,
                                date.toLocaleDateString('en-GB'),
                                item.title,
                                0,
                                0,
                                item.description,
                                '', '', '', '', '', '', '', '',
                            ];
                            rows.push(row);
                        }
                        rows.push([]);
                        rows.push([]);


                        let sumRow = ['', '', 'Итого:', `=SUM(D1:D${data.items.length})`, `=SUM(E1:E${data.items.length})`, ''];
                        rows.push(sumRow);

                        rows.push([]);
                        let profitRow = ['', '', '', 'Прибыль:', `=D${data.items.length + 3}-E${data.items.length + 3}`];
                        rows.push(profitRow);
                        let turnoverRow = ['', '', '', 'Оборот:', `=D${data.items.length + 3}+E${data.items.length + 3}`];
                        rows.push(turnoverRow);




                        $('#demo').jexcel({
                            data: rows, 
                            colWidths: [60, 120, 300, 80, 100, 400, 60, 60, 60, 60, 60, 60, 60, 60, 60, 60],
                            columns: [
                                {},
                                { type: 'calendar' },
                                {},
                                { type: 'numeric' },
                                { type: 'numeric' },
                            ],
                            colHeaders: ['ID', 'Дата', 'Название операции', 'Доход', 'Расход', 'Описание'],
                            allowDeleteColumn: false,
                            allowInsertColumn: false,
                            allowComments: false,
                            context: null,
                            minSpareRows: 50,
                            minSpareCols: 10,
                            parseFormulas: true,
                            autoIncrement: true,
                            autoCasting: true,
                            secureFormulas: true,
                            stripHTML: true,
                            fullscreen : true,
                            onchange: function (instance, cell, x, y, value) {
                                console.log(y);
                                console.log(x);
                                console.log(cell);
                                console.log(instance);
                                console.log(value);
                            },



                        });
                    });





               
            </script>

        </div>
    </div>
</div>
