@using Alfateam.CRM.ViewModels.Orders;
@using Alfateam.Database.Models
@{
    Layout = "_AdminLayoutV2";
}
@model OrdersPageVM

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Заказы
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover" id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th>Стоимость</th>
                        <th>Бюджет</th>
                        <th>Начало</th>
                        <th>Дедлайн</th>
                        <th>Актуальный дедлайн</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.Orders)
                   {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Price</td>
                            <td>@item.Budget</td>
                            <td>@item.StartDate.ToString("dd MMMM yyyy")</td>
                            <td>@item.Deadline.ToString("dd MMMM yyyy")</td>
                            <td style="color: red;">@item.ActualDeadline?.ToString("dd MMMM yyyy")</td>
                            <td>
                                <div class="interect">
                                    <a asp-action="UpdateOrder" asp-controller="Orders" asp-route-id="@item.Id" class="edit"><i class="fa-solid fa-eye"></i></a>
                                    <a asp-action="UpdateOrder" asp-controller="Orders" asp-route-id="@item.Id" class="edit"><i class="fa-solid fa-pencil"></i></a>
                                </div>
                            </td>
                        </tr>
                   }
                </tbody>
            </table>

            <div class="mb-3 position-right">
                <a asp-action="CreateOrder" asp-controller="Orders" class="button-classic">Добавить</a>
            </div>

            <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>

        </div>
    </div>
</div>
<!-- /.row -->
