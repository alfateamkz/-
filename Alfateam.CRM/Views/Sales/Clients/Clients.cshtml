@using Alfateam.CRM.ViewModels.Orders;
@using Alfateam.CRM.ViewModels.Sales.Clients;
@using Alfateam.Database.Models
@using MarkupCreator.Helpers.Converters;
@{
    Layout = "_AdminLayoutV2";
}
@model ClientsPageVM

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Клиенты
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover" id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th>Id</th>
                        <th>ФИО</th>
                        <th>Тип клиента</th>
                        <th>Название организации(для юр.лиц)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.Clients)
                   {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Surname @item.Name @item.Patronymic</td>
                            <td>@EnumDescriptionHelper.GetDescription(item.ClientType)</td>
                            <td>@item.CompanyName</td>
                            <td>
                                <div class="interect">
                                    <a asp-action="UpdateClient" asp-controller="Sales" asp-route-id="@item.Id" class="edit"><i class="fa-solid fa-eye"></i></a>
                                    <a asp-action="UpdateClient" asp-controller="Sales" asp-route-id="@item.Id" class="edit"><i class="fa-solid fa-pencil"></i></a>
                                </div>
                            </td>
                        </tr>
                   }
                </tbody>
            </table>

            <div class="mb-3 position-right">
                <a asp-action="CreateClient" asp-controller="Sales" class="button-classic">Добавить</a>
            </div>

            <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>

        </div>
    </div>
</div>
<!-- /.row -->
