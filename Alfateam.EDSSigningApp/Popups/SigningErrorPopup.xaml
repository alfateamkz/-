<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage 
    x:Name="this"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
    CloseWhenBackgroundIsClicked="False"
    Background="Transparent"
    BackgroundColor="Transparent"
    x:Class="Alfateam.EDSSigningApp.Popups.SigningErrorPopup"
    Title="SigningSuccessPopup">
    <Grid>

        <Grid 
            Background="#DCDCDC"
            BackgroundColor="#DCDCDC"
            Opacity="0.9">

        </Grid>

        <Frame
            HasShadow="False"
            Padding="{OnPlatform Android=10, Default=20}"
            HeightRequest="232"
            WidthRequest="372"
            CornerRadius="12"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Background="{StaticResource White}"
            BackgroundColor="{StaticResource White}">
            <VerticalStackLayout 
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Spacing="20">

                <Image 
                    Source="signing_error.png"
                    WidthRequest="75"
                    HeightRequest="75"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"/>

                <Label 
                    Style="{StaticResource Bold}"
                    FontSize="{StaticResource PopupHeader}"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Text="Сертификат недействителен!" />

                <Button 
                    Clicked="onGoBackTapped"
                    VerticalOptions="Start"
                    HorizontalOptions="Fill"
                    Text="Закрыть"/>

            </VerticalStackLayout>
        </Frame>
    </Grid>
</rg:PopupPage>
