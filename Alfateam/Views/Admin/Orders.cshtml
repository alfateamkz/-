@using Alfateam.Database.Models
@{
    Layout = "_AdminLayoutV2";
}
@model List<Order>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Заказы
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover" id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th>Id</th>
                        <th>Имя</th>
                        <th>Название компании</th>
                        <th>Описание</th>
                        <th>Бюджет</th>
                        <th>Контакты</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.CompanyName</td>
                            <td>@item.Description</td>
                            <td>@item.Budget</td>
                            <td>@item.Contacts</td>
                        </tr>
                   }
                </tbody>
            </table>

            <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>

        </div>
    </div>
</div>
<!-- /.row -->
