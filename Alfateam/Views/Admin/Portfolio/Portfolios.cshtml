@using Alfateam.Database.Models.Portfolios
@using Alfateam.Helpers
@{
    Layout = "_AdminLayout";
}
@model List<Portfolio>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Портфолио
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th>Категория</th>
                        <th>Описание</th>
                        <th style="width:80px"></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@LocalizationHelper.GetLocalizedString(item.Captions,"RU")</td>
                            <td>@LocalizationHelper.GetLocalizedString(item.Category.Captions,"RU")</td>
                            <td>@LocalizationHelper.GetLocalizedString(item.Descriptions,"RU")</td>
                            <td><a asp-action="UpdatePortfolio" asp-controller="Portfolios" asp-route-id="@item.Id"><button class="btn btn-warning">Изменить</button></a></td>
                            <td><a asp-action="DeletePortfolio" asp-controller="Portfolios" asp-route-id="@item.Id"><button class="btn btn-danger">Удалить</button></a></td>
                       </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->
