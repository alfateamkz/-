@using Alfateam.Database.Models
@using Alfateam.Database.Models.Portfolios
@using Alfateam.ViewModels.Admin
@using CRMWeb.Helpers.Html
@{
    Layout = "_AdminLayout";
}
@model PortfoliosVM

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Создание нового портфолио
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <form asp-action="CreatePortfolioPOST" asp-controller="Portfolios" method="post" enctype="multipart/form-data" role="form">

            <div class="form-group">
                <label>Название</label>
                <input class="form-control" name="NewPortfolio.Captions[0].Text" required placeholder="">
            </div>
            <input type="hidden" name="NewPortfolio.Captions[0].LanguageId" value="1" />

             <div class="form-group">
                 <label>Категория</label>
                 <select class="form-control" name="NewPortfolio.CategoryId">
                     @Html.Raw(ClassesToHtmlHelper<PortfolioCategory>.Convert(Model.PortfolioCategories))
                 </select>
            </div>

            <div class="form-group">
                <label>Изображения (макс. 20 штук)</label>
                <input type="file" name="file" required multiple>
            </div>

            <div class="form-group">
                <label>Описание</label>
                <textarea class="form-control" name="NewPortfolio.Descriptions[0].Text" required rows="3"></textarea>
            </div>
             <input type="hidden" name="NewPortfolio.Descriptions[0].LanguageId" value="1" />


            <button type="submit" class="btn btn-default">Создать</button>
        </form>

    </div>
</div>