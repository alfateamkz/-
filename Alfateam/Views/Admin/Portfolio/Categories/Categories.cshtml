@using Alfateam.Database.Models
@using Alfateam.Helpers
@{
    Layout = "_AdminLayout";
}
@model List<PortfolioCategory>
@{
    var currentLang = DBHelper.GetCurrentLanguage(User);
}

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Категории портфолио
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th style="width:80px"></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@LocalizationHelper.GetLocalizedString(item.Captions,currentLang.Code)</td>
                            <td><a asp-action="UpdateCategory" asp-controller="PortfolioCategories" asp-route-id="@item.Id"><button class="btn btn-warning">Изменить</button></a></td>
                            <td><a asp-action="DeleteCategory" asp-controller="PortfolioCategories" asp-route-id="@item.Id"><button class="btn btn-danger">Удалить</button></a></td>
                        </tr>               
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->
