@using Alfateam.Database.Models
@using Alfateam.Helpers
@{
    Layout = "_AdminLayoutV2";
}
@model List<PortfolioCategory>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Категории портфолио
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover" id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th style="width:80px"></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Caption</td>
                            <td><a asp-action="UpdateCategory" asp-controller="PortfolioCategories" asp-route-id="@item.Id"><button class="btn btn-warning">Изменить</button></a></td>
                            <td><a asp-action="DeleteCategory" asp-controller="PortfolioCategories" asp-route-id="@item.Id"><button class="btn btn-danger">Удалить</button></a></td>
                        </tr>               
                    }
                </tbody>
            </table>

            <div class="mb-3 position-right">
                <a asp-action="CreateCategory" asp-controller="PortfolioCategories" class="button-classic">Добавить</a>
            </div>

            <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>

        </div>
    </div>
</div>
<!-- /.row -->
