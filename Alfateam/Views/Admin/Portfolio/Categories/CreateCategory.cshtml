@using Alfateam.Database.Models
@{
    Layout = "_AdminLayout";
}
@model PortfolioCategory

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Создание новой категории портфолио
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <form asp-action="CreateCategoryPOST" asp-controller="PortfolioCategories" method="post" enctype="multipart/form-data" role="form">

           <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="Captions[0].Text" required placeholder="">
            </div>
            <input type="hidden" asp-for="Captions[0].LanguageId" value="1" />

            <button type="submit" class="btn btn-default">Создать</button>

        </form>

    </div>
</div>