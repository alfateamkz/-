@using Alfateam.Database.Models
@{
    Layout = "_AdminLayout";
}
@model Partner

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Создание нового партнера
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <form asp-action="CreatePartnerPOST" asp-controller="Partners" method="post" enctype="multipart/form-data"  role="form">

            <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="Titles[0].Text" required placeholder="">
            </div>
            <input type="hidden" asp-for="Titles[0].LanguageId" value="1" />

            <div class="form-group">
                <label>Изображение</label>
                <input type="file" name="file" required>
            </div>

            <div class="form-group">
                <label>Описание</label>
                <textarea class="form-control"  asp-for="Descriptions[0].Text" required rows="3"></textarea>
            </div>
            <input type="hidden" asp-for="Descriptions[0].LanguageId" value="1" />

            <button type="submit" class="btn btn-default">Создать</button>

        </form>

    </div>
</div>