@using Alfateam.Database.Models
@{
    Layout = "_AdminLayoutV2";
}
@model List<Partner>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Партнеры
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover" id="tablemanager">
                <thead class="tableheader">
                    <tr>
                        <th style="width:50px"></th>
                        <th>Id</th>
                        <th>Название</th>
                        <th>Описание</th>
                        <th style="width:80px"></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model)
                   {
                        <tr>
                            <td>
                                <img src="@item.ImgPath" width="50" height="50">
                            </td>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td><a asp-action="UpdatePartner" asp-controller="Partners" asp-route-id="@item.Id"><button class="btn btn-warning">Изменить</button></a></td>
                            <td><a asp-action="DeletePartner" asp-controller="Partners" asp-route-id="@item.Id"><button class="btn btn-danger">Удалить</button></a></td>
                        </tr>
                   }
                </tbody>
            </table>

            <div class="mb-3 position-right">
                <a asp-action ="CreatePartner" asp-controller="Partners" class="button-classic">Добавить</a>
            </div>

            <script>
                $(document).ready(function () {
                    $('#tablemanager').DataTable();
                });
            </script>

        </div>
    </div>
</div>
<!-- /.row -->
