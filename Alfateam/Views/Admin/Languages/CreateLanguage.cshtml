@using Alfateam.Database.Models
@{
    Layout = "_AdminLayoutV2";
}
@model Language

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Создание нового языка
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <form asp-action="CreateLanguagePOST" asp-controller="Languages" method="post" enctype="multipart/form-data" role="form">

            <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="Title" required placeholder="">
            </div>

            <div class="form-group">
                <label>Код языка</label>
                <input class="form-control" asp-for="Code" required placeholder="">
            </div>

            <div class="form-group">
                <label for="" class="">Изображение</label>
                <input type="file" name="file" class="form-control" placeholder="">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsShown" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Отображать в меню
                </label>
            </div>

            <div class="mb-3 mt-3 position-right">
                <button type="submit" class="button-classic">Сохранить</button>
            </div>

        </form>

    </div>
</div>