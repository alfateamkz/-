@using Alfateam.Database.Models
@{
    Layout = "_AdminLayout";
}
@model Language

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Редактирование языка
        </h1>
    </div>
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-12">

        <form asp-action="UpdateLanguagePOST" asp-controller="Languages" method="post" enctype="multipart/form-data" role="form">

            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="IconPath" value="@Model.IconPath" />
            
            <div class="form-group">
                <label>Название</label>
                <input class="form-control" asp-for="Title" required placeholder="">
            </div>

           <div class="form-group">
                <label>Код языка</label>
                <input class="form-control" asp-for="Code" required placeholder="">
            </div>

            <div class="form-group">
                <label>Изображение</label>
                <input type="file" name="file">
            </div>

             <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsShown" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Отображать в меню
                </label>
            </div>

            <button type="submit" class="btn btn-default">Сохранить</button>

        </form>

    </div>
</div>