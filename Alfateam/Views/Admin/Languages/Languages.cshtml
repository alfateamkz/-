@using Alfateam.Database.Models
@{
    Layout = "_AdminLayout";
}
@model List<Language>

<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Языки
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th style="width:50px"></th>
                        <th>Id</th>
                        <th>Название</th>
                        <th>Код языка</th>
                        <th>Статус</th>
                        <th style="width:80px"></th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                         <tr>
                            <td>
                                <img src="@item.IconPath" width="30" height="30">
                            </td>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Code</td>
                            <td>
                                @if(item.IsShown)
                                {
                                    @("Отображается")
                                }
                                else{
                                    @("Скрыт")
                                }
                            </td>
                            <td><a asp-action="UpdateLanguage" asp-controller="Languages" asp-route-id="@item.Id"><button @if(item.Code == "RU"){@("disabled")} class="btn btn-warning">Изменить</button></a></td>
                            <td><a asp-action="DeleteLanguage" asp-controller="Languages" asp-route-id="@item.Id"><button @if(item.Code == "RU"){@("disabled")} class="btn btn-danger">Удалить</button></a></td>
                        </tr>
                    }               
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /.row -->
