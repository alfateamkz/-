@using Alfateam.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <title>ALPHA TEAM - СТУДИЯ</title>

    <!-- META -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Запусти свой новый бизнес с Alpha Team">
    <meta name="keywords" content="alpha team, альфа тим, альфа, омега, видео, смореть, программирование, заказать, дизайн, верстка, мобильные приложения">

    <!-- INCLUDE CSS -->
    <link rel="stylesheet" href="~/media/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/media/css/global.css">
    <link rel="stylesheet" href="~/media/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/media/css/owl.theme.default.css">

    <!-- INCLUDE JS -->
    <script src="~/media/js/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="~/media/js/bootstrap.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/tone/0.8.0/Tone.min.js'></script>
    <script src="~/media/js/snabbt.min.js"></script>
    <script src="~/media/js/owl.carousel.min.js"></script>
</head>
<body>
    <!-- PRELOADER -->
    <div class="preloader">
        <div class="preloader__row">
          <div class="preloader__item"></div>
          <div class="preloader__item"></div>
        </div>
    </div>
    <script>
        window.onload = function () {
          document.body.classList.add('loaded_hiding');
          window.setTimeout(function () {
            document.body.classList.add('loaded');
            document.body.classList.remove('loaded_hiding');
          }, 500);
        }
    </script>
    
    <!-- NAVIGATION BAR MOBILE -->
    <nav class="navbar navbar-expand-lg fixed-top bg-alpha nav-mobile">
        <div class="container">
            <a href="/" class="logotype">ALPHA TEAM</a>

            <div class="dropdown text-end navtransform">
                @{
                    var currentLang = DBHelper.GetCurrentLanguage(User);
                    var generalTexts = DBHelper.GetGeneralTexts();
                }

                <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                     @currentLang.Title
                </a>
                <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                 @foreach (var item in DBHelper.GetLanguages())
                 {
                     <li onclick="setLocale(@item.Id)">
                            <a class="dropdown-item" href="#">
                                <div class="content">
                                    <div class="text">@item.Title</div>
                                    <div class="flag-mini" style="background: url('@item.IconPath') center;background-size: 100%;"></div>
                                </div>
                            </a>
                        </li>   
                 }
                </ul>
                <div class="flag russian" style="background: url('@currentLang.IconPath')"></div>
            </div>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" asp-action="Index" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Main,currentLang.Code)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Services" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.ServicesPrice,currentLang.Code)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Portfolios" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.OurWorks,currentLang.Code)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="News" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.News,currentLang.Code)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Team" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Team,currentLang.Code)</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Partners" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Partners,currentLang.Code)</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- NAVIGATION BAR DESKTOP-->
    <div class="dark-nav fixed-top nav-desktop">
        <div class="container">
            <nav class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4">
                <a href="/" class="logotype">ALPHA TEAM</a>
        
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                <li><a asp-action="Index" asp-controller="Home" class="nav-link px-2 link-dark"> @LocalizationHelper.GetLocalizedString(generalTexts.Main,currentLang.Code)</a></li>
                <li><a asp-action="Services" asp-controller="Home" class="nav-link px-2 link-dark">@LocalizationHelper.GetLocalizedString(generalTexts.ServicesPrice,currentLang.Code)</a></li>
                <li><a asp-action="Portfolios" asp-controller="Home" class="nav-link px-2 link-dark">@LocalizationHelper.GetLocalizedString(generalTexts.OurWorks,currentLang.Code)</a></li>
                <li><a asp-action="News" asp-controller="Home" class="nav-link px-2 link-dark">@LocalizationHelper.GetLocalizedString(generalTexts.News,currentLang.Code)</a></li>
                <li><a asp-action="Team" asp-controller="Home" class="nav-link px-2 link-dark">@LocalizationHelper.GetLocalizedString(generalTexts.Team,currentLang.Code)</a></li>
                <li><a asp-action="Partners" asp-controller="Home" class="nav-link px-2 link-dark">@LocalizationHelper.GetLocalizedString(generalTexts.Partners,currentLang.Code)</a></li>
                </ul>
        
                <div class="dropdown text-end navtransform">
                    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                     @currentLang.Title
                    </a>
                    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                        @foreach (var item in DBHelper.GetLanguages())
                         {
                             <li onclick="setLocale(@item.Id)">
                                    <a class="dropdown-item" href="#">
                                        <div class="content">
                                            <div class="text">@item.Title</div>
                                            <div class="flag-mini" style="background: url('@item.IconPath') center;background-size: 100%;"></div>
                                        </div>
                                    </a>
                                </li>   
                         }
                    </ul>
                    <div class="flag russian" style="background: url('@currentLang.IconPath')"></div>
                </div>
            </nav>
        </div>
    </div>

    @RenderBody()

    <!-- FOOTER -->
    @if (!ViewData.TryGetValue("HideFooter", out _))
    {
        <footer class="footer-dark">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 footer-bar-1">
                        <div class="info">
                            <a asp-action="Index" asp-controller="Home"class="logotype-footer">ALPHA TEAM</a>
                            <div class="copyright">@LocalizationHelper.GetLocalizedString(generalTexts.AllRightsReserved,currentLang.Code) © @DateTime.Now.Year</div>

                            <div class="perminfo">
                                <b>ТОО "Alfateam"</b> <br/>
                                <b>БИН:</b> 220640023065 <br/>
                            </div>

                        </div>
                    </div>

                    <div class="col-md-2 footer-bar-2">
                        <div class="footer-links">
                            <div class="title">@LocalizationHelper.GetLocalizedString(generalTexts.Navigation,currentLang.Code)</div>
                            <div class="links">
                                <a class="link" asp-action="Index" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Main,currentLang.Code)</a>
                                <a class="link" asp-action="Services" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.ServicesPrice,currentLang.Code)</a>
                                <a class="link" asp-action="Portfolios" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.OurWorks,currentLang.Code)</a>
                                <a class="link" asp-action="Team" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Team,currentLang.Code)</a>
                                <a class="link" asp-action="Partners" asp-controller="Home">@LocalizationHelper.GetLocalizedString(generalTexts.Partners,currentLang.Code)</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2 footer-bar-2">
                        <div class="footer-links">
                            <div class="title">@LocalizationHelper.GetLocalizedString(generalTexts.SocialNetworks,currentLang.Code)</div>
                            <div class="links">
                                <a href="https://instagram.com/" class="link">Instagram</a>
                                <a href="https://twitter.com/" class="link">Twitter</a>
                                <a href="https://facebook.com/" class="link">Facebook</a>
                                <a href="https://vk.com/" class="link">ВКонтакте</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    
    }

    <script src="~/media/js/global.js"></script>

        
    <script>
        async function setLocale(langId){
            await fetch(`SetLocale?langId=${langId}`);
            document.location.reload();
        }

    </script>

    @RenderSection("js",false)

</body>
</html>
